<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TableActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <ImageView
            android:id="@+id/image01"
            android:src="@drawable/img01"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_margin="5dp"
             />
        <ImageView
            android:id="@+id/image02"
            android:src="@drawable/img02"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_margin="5dp" />
        <ImageView
            android:id="@+id/image03"
            android:src="@drawable/img03"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_margin="5dp" />
        <ImageView
            android:id="@+id/image04"
            android:src="@drawable/img04"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_margin="5dp" />
        <ImageView
            android:id="@+id/image05"
            android:src="@drawable/img05"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_margin="5dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/titreTable"
        android:text="@string/titreTable"
        android:textColor="@color/police"
        android:textSize="40dp"
        android:gravity="center"
        android:layout_margin="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/boutonAccueil"
        android:text="@string/boutonAccueil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:background="@color/teal_700"
        />




</LinearLayout>